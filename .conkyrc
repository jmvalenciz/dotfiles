conky.config = {
  use_spacer = 'left',
  pad_percents = 3,
  background = false,
  double_buffer = true,
  font = 'Source Code Medium:size=10',
  use_xft = true,
  alignment = 'top_left',
  gap_x = 10,
  gap_y = 40,
  own_window_argb_visual = true,
  own_window_argb_value = 0,
  own_window_type = 'normal',
  own_window_hints = 'undecorated,below,skip_taskbar,skip_pager,sticky',
  own_window = true,
  own_window_class = 'Conky',
  own_window_type = 'override',
  update_interval = 1.0,
  background = no,
}

conky.text = [[
${color #e87000}Hostname: ${color}${nodename}
${color #e87000}Kernel:   ${color}${kernel}
${color #e87000}Uptime:   ${color}${uptime}

${hr}

${color #e87000}CPU

${color #e87000}Core 1:${color} ${cpu cpu1}% ${cpubar cpu1}
${color #e87000}Core 2:${color} ${cpu cpu2}% ${cpubar cpu2}
${color #e87000}Core 3:${color} ${cpu cpu3}% ${cpubar cpu3}
${color #e87000}Core 4:${color} ${cpu cpu4}% ${cpubar cpu4}

${cpugraph}

${hr}

${color #e87000}Name              PID   CPU%   MEM%
${color lightgrey}${top name 1} ${top pid 1}${top cpu 1} ${top mem 1}
${color lightgrey}${top name 2} ${top pid 2}${top cpu 2} ${top mem 2}
${color lightgrey}${top name 3} ${top pid 3}${top cpu 3} ${top mem 3}
${color lightgrey}${top name 4} ${top pid 4}${top cpu 4} ${top mem 4}

${hr}

${color #e87000}RAM:  ${color}${mem} - ${memmax}
${memperc}% ${membar 4}

${color #e87000}Swap: ${color}${swap} - ${swapmax}
${swapperc}% ${swapbar 4}

${memgraph}
${hr}

${color #e87000}DISCOS

${color #e87000}ROOT: ${color}${fs_bar 6 /}
${color #e87000}HOME: ${color}${fs_bar 6 /home}

${hr}

${color #e87000}IP:   ${color}${addr enp0s31f6}
${color #e87000}Down: ${color}${downspeedgraph enp0s31f6}
]]
